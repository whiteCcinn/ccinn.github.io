.search
    display: none

.search.show
    display: block

.search-mask
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10003
    background-color: rgba(0,0,0,.3)

.search-wrapper
    position: fixed
    top: 100px
    left: 50%
    z-index: 10004
    margin-left: -270px
    padding: 30px 50px
    max-width: 540px
    width: 100%
    text-align: center
    background-color: color-white

.search-title
    font-size: 32px
    line-height: 58px
    strong
        font-weight: 600

.search-input
    width: 100%
    height: 36px
    border-radius: 2px
    border: 1px solid color-border

.search-close
    position: absolute
    top: 10px
    right: 10px
    padding: 10px 0 10px 10px
    cursor: pointer

.search-result
    position: fixed
    top: 252px
    left: 50%
    margin-left: -270px
    padding: 20px 0
    z-index: 10004
    max-width: 540px
    width: 100%
    max-height: 240px
    overflow: auto
    border-top: 1px solid color-border
    background-color: color-white
    
.search-result-list
    list-style: none
    li
        padding: 10px 50px
        &:hover
            background-color: color-theme
            a
                color: color-white

.search-result-title
    font-size: 14px
    line-height: line-height
    color: color-text

@media screen and (max-width: 720px)
    .search-wrapper,
    .search-result
        left: 0
        margin-left: 0

    .search-wrapper
        top: 0
        padding: 30px 5px

    .search-close
        right: 12px

    .search-result
        top: 152px

    .search-result-list li
        padding: 10px